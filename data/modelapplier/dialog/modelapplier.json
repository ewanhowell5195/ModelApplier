{
  "type": "minecraft:multi_action",
  "title": "ModelApplier",
  "external_title": "ModelApplier",
  "columns": 1,
  "actions": [
    {
      "label": "ModelApplier",
      "tooltip": "Apply the name of the held item as the item, equipment model, or painting variant for it to load",
      "action": {
        "type": "minecraft:show_dialog",
        "dialog": {
          "type": "minecraft:multi_action",
          "title": "ModelApplier",
          "external_title": "ModelApplier",
          "actions": [
            {
              "label": "Apply Item Model",
              "tooltip": "Set the held item's item model to the renamed value",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger applymodel"
              }
            },
            {
              "label": "Apply Equipment Model",
              "tooltip": "Use the renamed value as the equippable asset ID",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger applyequipment"
              }
            },
            {
              "label": "Apply Painting",
              "tooltip": "Use the renamed value as the painting variant",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger applypainting"
              }
            }
          ],
          "exit_action": {
            "label": "Back",
            "tooltip": "Go back",
            "action": {
              "type": "minecraft:show_dialog",
              "dialog": "modelapplier:modelapplier"
            }
          }
        }
      }
    },
    {
      "label": "SlotApplier",
      "tooltip": "Set which slot the held item can be equipped in",
      "action": {
        "type": "minecraft:show_dialog",
        "dialog": {
          "type": "minecraft:multi_action",
          "title": "SlotApplier",
          "external_title": "SlotApplier",
          "actions": [
            {
              "label": "Head Slot",
              "tooltip": "Equip the held item on your head slot",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger slotapplier set 1"
              }
            },
            {
              "label": "Chest Slot",
              "tooltip": "Equip the held item on your chest slot",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger slotapplier set 2"
              }
            },
            {
              "label": "Legs Slot",
              "tooltip": "Equip the held item on your leg slot",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger slotapplier set 3"
              }
            },
            {
              "label": "Feet Slot",
              "tooltip": "Equip the held item on your feet slot",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger slotapplier set 4"
              }
            },
            {
              "label": "Body Slot (Not the Player)",
              "tooltip": "Equip the held item on the body slot of entities",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger slotapplier set 5"
              }
            },
            {
              "label": "Saddle Slot",
              "tooltip": "Equip the held item into the saddle slot",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger slotapplier set 6"
              }
            }
          ],
          "exit_action": {
            "label": "Back",
            "tooltip": "Go back",
            "action": {
              "type": "minecraft:show_dialog",
              "dialog": "modelapplier:modelapplier"
            }
          }
        }
      }
    },
    {
      "label": "GlintApplier",
      "tooltip": "Add or remove glints from an item",
      "action": {
        "type": "minecraft:show_dialog",
        "dialog": {
          "type": "minecraft:multi_action",
          "title": "GlintApplier",
          "external_title": "GlintApplier",
          "actions": [
            {
              "label": "Apply Enchantment Glint",
              "tooltip": "Add the enchantment glint effect to your currently held item",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger applyglint"
              }
            },
            {
              "label": "Remove Enchantment Glint",
              "tooltip": "Remove the enchantment glint effect from your currently held item",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger applyglint set 2"
              }
            }
          ],
          "exit_action": {
            "label": "Back",
            "tooltip": "Go back",
            "action": {
              "type": "minecraft:show_dialog",
              "dialog": "modelapplier:modelapplier"
            }
          }
        }
      }
    },
    {
      "label": "Reset Model",
      "tooltip": "Reset your currently held item back to its initial state",
      "action": {
        "type": "minecraft:show_dialog",
        "dialog": "modelapplier:resetmodel"
      }
    }
  ]
}