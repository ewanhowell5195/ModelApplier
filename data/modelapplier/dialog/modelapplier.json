{
  "type": "minecraft:multi_action",
  "title": "ModelApplier",
  "external_title": "ModelApplier",
  "columns": 1,
  "actions": [
    {
      "label": "Apply Model",
      "tooltip": "Applies the name of the held item as the item model for it to load",
      "action": {
        "type": "minecraft:run_command",
        "command": "trigger applymodel"
      }
    },
    {
      "label": "GlintApplier",
      "tooltip": "Add or remove glints from an item",
      "action": {
        "type": "minecraft:show_dialog",
        "dialog": {
          "type": "minecraft:multi_action",
          "title": "GlintApplier",
          "external_title": "GlintApplier",
          "actions": [
            {
              "label": "Apply Enchantment Glint",
              "tooltip": "Add the enchantment glint effect to your currently held item",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger applyglint"
              }
            },
            {
              "label": "Remove Enchantment Glint",
              "tooltip": "Remove the enchantment glint effect from your currently held item",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger applyglint set 2"
              }
            }
          ],
          "exit_action": {
            "label": "Back",
            "tooltip": "Go back to ModelApplier",
            "action": {
              "type": "minecraft:show_dialog",
              "dialog": "modelapplier:modelapplier"
            }
          }
        }
      }
    },
    {
      "label": "Reset Model",
      "tooltip": "Remove the applied model and glint overrides from the held item",
      "action": {
        "type": "minecraft:show_dialog",
        "dialog": {
          "type": "minecraft:multi_action",
          "title": "Are you sure you want to reset the held item's model?",
          "external_title": "Reset Model",
          "actions": [
            {
              "label": "Yes, reset it",
              "tooltip": "Remove the held item's model, equippable, and glint components",
              "action": {
                "type": "minecraft:run_command",
                "command": "trigger resetmodel"
              }
            },
            {
              "label": "No, go back",
              "tooltip": "Keep the current model and glint state",
              "action": {
                "type": "minecraft:show_dialog",
                "dialog": "modelapplier:modelapplier"
              }
            }
          ],
          "exit_action": {
            "label": "Back",
            "tooltip": "Go back to ModelApplier",
            "action": {
              "type": "minecraft:show_dialog",
              "dialog": "modelapplier:modelapplier"
            }
          }
        }
      }
    }
  ]
}